@model IEnumerable<PMS.EF.Models.Product>

@{
    ViewBag.Title = "Restaurants";
    Layout = "~/Views/Shared/ngolayout.cshtml";
}
<h2>Restaurants</h2>
@if (TempData["Msg"] != null)
{
    <h1 class="alert @TempData["Color"]">@TempData["Msg"]</h1>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Qty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lasttime)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lasttime)
            </td>
            <td>
                <a class="btn btn-success" href="/Order/AddCart/@item.Id">Collect Request</a>

            </td>
        </tr>
    }

</table>
<p class="text-center">
    @for (int i = 1; i <= ViewBag.pages; i++)
    {
        <a href="/Order/Index/@i" class="btn btn-danger">@i</a>
    }
</p>
